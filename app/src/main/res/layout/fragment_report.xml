<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 제일 뒤에 배치되는 배경 이미지 -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/report_background"
        android:background="@color/black"
        android:scaleType="centerCrop" />

    <!-- ScrollView 콘텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/report_background"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:gravity="start"
            android:orientation="vertical">

            <!-- 회색 박스 - 이달의 메시지 -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="40dp"
                android:paddingBottom="100dp"
                android:text="김송송님의\n월간리포트"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/report_frame"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- 왼쪽 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:text="11월"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번달은\n영화에 관심이 많아요"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 오른쪽 이미지 -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/doc" />
            </LinearLayout>

            <!-- 차트 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 이미지 -->
                <ImageView
                    android:id="@+id/chart1_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/singers" />

                <!-- 텍스트 -->
                <TextView
                    android:id="@+id/chart1_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="영화"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/chart1_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78%"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- 차트 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 이미지 -->
                <ImageView
                    android:id="@+id/chart2_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ring" />

                <!-- 텍스트 -->
                <TextView
                    android:id="@+id/chart2_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="의류"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/chart2_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12%"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- 차트 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 이미지 -->
                <ImageView
                    android:id="@+id/chart3_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/nike" />

                <!-- 텍스트 -->
                <TextView
                    android:id="@+id/chart3_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="명언"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/chart3_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7%"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- 하단 차트 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
